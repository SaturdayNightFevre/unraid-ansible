server:
  host: 0.0.0.0
  port: 9091

log:
  level: info

authentication_backend:
  file:
    path: /config/users_database.yml

access_control:
  default_policy: deny
  rules:
    - domain: "*.{{ DOMAIN }}"
      policy: one_factor

session:
  name: authelia_session
  secret: "{{ PASSWORD_HASH }}"
  expiration: 3600
  domain: "{{ DOMAIN }}"

storage:
  local:
    path: /var/lib/authelia/db.sqlite3

notifier:
  filesystem:
    filename: /config/notification.txt
